{
  "name": "polkadotjs-simple-scripts",
  "description": "Simple Polkadot{.js} Script Examples",
  "author": "Scio Labs <hello@scio.xyz> (https://scio.xyz)",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "build": "tsc",
    "node": "substrate-contracts-node --dev --base-path ./.node-data",
    "script": "f() { node --no-warnings=ExperimentalWarning --loader ts-node/esm ./src/$1; }; f \"$@\"",
    "script:cwd": "node --no-warnings=ExperimentalWarning --loader ts-node/esm",
    "script:node18": "ts-node --cwd=src",
    "type-check": "tsc --pretty --noEmit"
  },
  "devDependencies": {
    "@polkadot/types": "^10.10.1",
    "@types/node": "^18.18.7",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@azns/resolver-core": "^1.6.0",
    "@polkadot/api": "^10.10.1",
    "@polkadot/util": "^12.5.1",
    "@polkadot/util-crypto": "^12.5.1",
    "@scio-labs/use-inkathon": "^0.3.0",
    "enquirer": "^2.4.1"
  }
}
